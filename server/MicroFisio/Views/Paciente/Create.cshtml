@model MicroFisio.Models.Paciente
@{
    ViewData["Title"] = "Cadastrar Paciente";
}
<link rel="stylesheet" href="~/css/Agenda.css" />
<div class="container mt-3">
  <div class="card">
    <div class="card-body">
      <h5 class="card-title">Cadastrar Paciente</h5>
      <form asp-action="Create" method="post">
        <div class="row g-3">
          <div class="col-md-6">
            <label class="form-label" for="Nome">Nome</label>
            <input class="form-control" id="Nome" name="Nome" required />
          </div>
          <div class="col-md-3">
            <label class="form-label" for="DataNascimento">Data de Nascimento</label>
            <input class="form-control" id="DataNascimento" name="DataNascimento" type="date" />
          </div>
          <div class="col-md-3">
            <label class="form-label" for="Telefone">Telefone</label>
            <input class="form-control" id="Telefone" name="Telefone" />
          </div>
          <div class="col-md-6">
            <label class="form-label" for="Email">Email</label>
            <input class="form-control" id="Email" name="Email" type="email" />
          </div>
          <div class="col-12">
            <label class="form-label" for="Observacoes">Observações</label>
            <textarea class="form-control" id="Observacoes" name="Observacoes" rows="3"></textarea>
          </div>
        </div>
        <div class="d-flex gap-2 mt-3">
          <button type="submit" class="btn btn-primary">Salvar</button>
          <a asp-controller="Home" asp-action="Index" class="btn btn-secondary">Cancelar</a>
        </div>
        @Html.AntiForgeryToken()
      </form>
    </div>
  </div>
</div>
