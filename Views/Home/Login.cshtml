@model MeuSiteEmMVC.Models.LoginModel

@{
    ViewData["Title"] = "Login";
    Layout = "_LayoutLogin";
}

@section Styles {
    <link rel="stylesheet" href="~/css/login.css" />
}

<div class="login-container">
    <div class="login-card">
        <h1 class="login-title">Acesso do Profissional</h1>
        
        @if (!ViewData.ModelState.IsValid)
        {
            <div class="alert alert-danger">
                @Html.ValidationSummary()
            </div>
        }

        <form asp-action="Login" method="post" id="loginForm" autocomplete="off" class="login-form">
            @Html.AntiForgeryToken()
            <div class="form-group">
                <label asp-for="Pin" class="form-label">PIN de acesso</label>
                <input asp-for="Pin" class="form-control" type="password" required placeholder="Digite seu PIN" />
                <span asp-validation-for="Pin" class="text-danger"></span>
            </div>
            <div class="form-group">
                <button type="submit" class="btn-login">Entrar</button>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}